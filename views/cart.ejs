<!-- cart.ejs-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>SnackZilla App</title>
</head>
<body>
    <%- include ('partials/header.ejs') %>
    <br>
    <div class="container"><h1>Cart items</h1>
    <br>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
        </thead>
        <tbody>

        <% if (cart && cart.length > 0)  {%> <!-- Check if cart data exists -->
           <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
                <td>Product ID:<br> <%= cart[i].productID %></br></td>
                <td>Product Name:<br> <%= cart[i].name %></br></td>
                <td>Price:<br> $<%= cart[i].Price %></br></td>
                <td>Product Quantity:<br> <%= cart[i].Quantity %></br></td>
                <td>Product Image:<br> <img src="/images/<%= product.image %>" width = "20%"></br></td>
                <!-- Edit Link -->
                <td><a href="/editProduct/<%= cart[i].productId %>">Edit</a></td> <!-- should be products[i]-->
                <!-- Delete Link -->
                <td><a href="/deleteProduct/<%= cart[i].productId %>" onclick="return confirm('Are you sure you want to remove this item from the cart?')">Delete</a></td>
            </tr>
            <% } %>
        <% } else { %>
            <tr>
                <td colspan="7">No items in cart found.</td>
            </tr>
            <% } %>
            </tbody>
        </table>
        <a href ="/">Back</a>
        </div>
    
</body>
</html> 
