<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>SnackZilla app</title>
</head>
<body>
    <%- include ('partials/header.ejs') %>
  
    <div class="container">
        <br>
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        <% if (product) { %> 
            <div>
                <p><b>Product ID:</b><br> <%= product.productID %></p>   
                <p><b>Product Name:</b><br> <%= product.name %></p>
                <p><b>Product Description:</b><br> <%= product.Description %></p>
                <p><b>Product Category:</b><br> <%= product.Category %></p>
                <p><b>Price:</b><br> $<%= product.Price %></p>
                <p><b>Product Stock:</b><br> <%= product.Stock %></p>
                <p><b>Product Image:</b><br> <img src = "<%= product.Image %>" width="20%"></p>
            </div>
        <% } else { %>
            <p>No product found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>


